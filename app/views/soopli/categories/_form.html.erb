
<div class="form-element-align">
  <%= simple_form_for category, :html => { :class => 'form-group' } do |f| %>
      <%= f.input :name %>
      <%= f.association :status, include_blank: false %>
	  <hr class="my-4">
	  <%= f.association :internal_person, label: 'Internal Owner', required: false %>
	
      <div class="form-actions">
        <%= f.button :submit, :class => 'btn btn-primary' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                    categories_path, :class => 'btn btn-warning' %>
      </div>

  <% end %>
</div>