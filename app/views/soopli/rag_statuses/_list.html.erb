<h1>Rag Statuses</h1>

<div class="table-responsive">
<table class="table table-striped table-hover table-sm table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
	  <th>Created At</th>	
    </tr>
  </thead>

  <tbody>
    <% rag_statuses.each do |rag_status| %>
      <tr>
        <td><%= rag_status.rag_status %></td>
		<td><%= rag_status.description %></td>
		<td><%= rag_status.created_at %></td>		
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
