<!DOCTYPE html>
<html>
<head>
  <title>Soopli</title>
  <%= stylesheet_link_tag    "soopli/application", media: "all" %>
  <%= javascript_include_tag "soopli/application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar fixed-top navbar-inverse navbar-toggleable-md navbar-light bg-faded bg-inverse">
  <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <a class="navbar-brand" href="#"> Soopli </a>

  <div class="collapse navbar-collapse" id="navbarNavDropdown">
    <ul class="navbar-nav">
      <li class="nav-item active">
        <a class="nav-link" href="<%= entities_path %>">Entities <%= current_menu_for('entities') %></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="<%= categories_path %>">Categories <%= current_menu_for('categories') %></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="<%= suppliers_path %>">Suppliers <%= current_menu_for('suppliers') %></a>
      </li>

      <li class="nav-item">
        <a class="nav-link" href="<%= teams_path %>">Teams <%= current_menu_for('teams') %></a>
      </li>

      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="PeopleDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          People
        </a>
        <div class="dropdown-menu" aria-labelledby="PeopleDropdown">
          <a class="dropdown-item" href="#">Internal</a>
          <a class="dropdown-item" href="#">Supplier</a>
        </div>
      </li>

      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="ParamsDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Parameters
        </a>
        <div class="dropdown-menu" aria-labelledby="ParamsDropdown">
          <a class="dropdown-item" href="<%= contract_types_path %>">Contract Types</a>
          <a class="dropdown-item" href="<%= supplier_types_path %>">Supplier Types</a>
		  <a class="dropdown-item" href="<%= event_types_path %>">Event Types</a>
		  <a class="dropdown-item" href="<%= supplier_types_path %>">Project Types</a>
		  <a class="dropdown-item" href="<%= supplier_types_path %>">Document Types</a>
		  <a class="dropdown-item" href="<%= positions_path %>">Positions</a>
		  <a class="dropdown-item" href="#">Currency</a>
		  <a class="dropdown-item" href="#">Custom Data</a>
		  <a class="dropdown-item" href="#">Menu</a>
        </div>
      </li>


    </ul>
  </div>
</nav>



<div class="container-fluid">

  <%= render partial: 'layouts/soopli/flash_messages', flash: flash%>

  <%= yield %>

  <div class="jumbotron">
    <%= debug(params) if Rails.env.development? %>
  </div>
</div>


</body>
</html>
